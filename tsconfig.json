{
    "include": ["src/**/*", "src/index.ts", "prisma"],
    "exclude": ["node_modules", "**/*.spec.ts"],
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": false,
        "skipLibCheck": true,
        "outDir": "dist",
        "baseUrl": "./src",
        "paths": {
            "@controllers/*": ["controllers/*"],
            "@middlewares/*": ["middlewares/*"],
            "@validation/*": ["middlewares/validation/*"],
            "@models/*": ["models/*"],
            "@dao/*": ["models/dao/*"],
            "@dto/*": ["models/dto/*"],
            "@routes/*": ["routes/*"],
            "@utilities/*": ["utilities/*"],
            "@types/*": ["types/*"]
        }
    }
}
